<% @business_travel = BizTravels::BusinessTravel.find(@workitem.fields['object_id']) %>
<%= form_for @business_travel, :url => "/biz_travels/business_travels/#{@business_travel.id}/approve_report", :html => {:class => 'form-horizontal' } do |f| %>    
 	<fieldset>
 		<%= render :partial => 'fields', :locals => { :f => f} %>
		<div <form action="form-actions">
			<%= f.hidden_field 'fei_id', :value => @workitem.fei.to_storage_id %>
			<%= f.submit 'Approve Report', :class =>'btn btn-primary', :name => 'Approve_Report' %> 
			<%= f.submit 'Incomplete Report', :class =>'btn btn-danger', :name => 'Incomplete_Report' %> 
			<%= link_to 'Cancel', business_travels_path, :class => 'btn' %> 
		</div>
 	</fieldset>
<% end %>  
